$ORIGIN {{ item }}.
$TTL 300
@	IN SOA	{{ nameservers[0].name }}	{{ contact }} (
	0	; serial number
	8h	; refresh
	1h	; retry
	7d	; expire
	1d	) ; min TTL

{% for ns in nameservers %}
	IN	NS	{{ ns.name }}.
{% endfor %}

{% if item == domain_name %}
$ORIGIN .
{% for ns in nameservers %}
{{ ns.name }}	IN	A	{{ ns.address }}
{% endfor %}
{% endif %}
